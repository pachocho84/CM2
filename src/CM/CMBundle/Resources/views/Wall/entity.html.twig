{% if is_granted('ROLE_USER') and posts.paginationData.current == 1 %}
    <div class="box">
        <div class="box-body">
            <div class="object post media">
                {{ show_img_box(app.user.img|imagine_filter('avatar'), {width: 40, offset: app.user.imgOffset, link: path('user_show', {slug: app.user.slug}), default: 'user', box_attributes: {class: 'pull-left img-rounded'}}) }}
                <div class="media-body">
                    <div class="comment_new">
                        {{ form_start(commentForm) }}
                            {{ form_widget(commentForm.comment, {downward: true}) }}
                        {{ form_end(commentForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{{ include('CMBundle:Wall:posts.html.twig') }}