{% extends '::base.html.twig' %}

{% block title %}Circuito Musica{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
        'css/jquery-ui.min.css'
        'css/bootstrap.min.css'
        'css/bootstrap-theme.min.css'
        'lib/glyphicons/css/glyphicons.css'
        'bundles/cm/css/common.css'
        'bundles/cm/css/main.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block icon %}{{ asset('favicon.ico') }}{% endblock %}

{% block header %}
    <div class="container">
        <a href="{{ path('homepage_index') }}" id="logo"><h1>Circuito Musica</h1></a>
    </div>
{% endblock %}

{% block menu %}
    <nav id="menu" class="navbar navbar-default snavbar-fixed-top" role="navigation" data-spy="saffix" sdata-offset-top="66">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                {{ show_icon('Bar')|raw }}
                {{ show_icon('Bar')|raw }}
                {{ show_icon('Bar')|raw }}
            </button>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <div class="container">

                <ul class="nav navbar-nav pull-left">
                    <li class="dropdown">
                        <a href="{{ path('page_index') }}">{{ 'Pages'|trans }}</a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('page_index') }}">{{ 'Pages'|trans }}</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('group_index') }}">{{ 'Groups'|trans }}</a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('group_index') }}">{{ 'Groups'|trans }}</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('event_index') }}">{{ 'Entities'|trans }}</a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('event_index') }}">{{ 'Events'|trans }}</a></li>
                            <li><a href="{{ path('disc_index') }}">{{ 'Discs'|trans }}</a></li>
                            <li><a href="{{ path('article_index') }}">{{ 'Articles'|trans }}</a></li>
                            <li><a href="{{ path('multimedia_index') }}">{{ 'Miultimedia'|trans }}</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('user_locale') }}">{{ 'Locales'|trans }}</a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('user_locale', {'_locale': "en" }) }}">En</a></li>
                            <li><a href="{{ path('user_locale', {'_locale': "fr" }) }}">Fr</a></li>
                            <li><a href="{{ path('user_locale', {'_locale': "it" }) }}">It</a></li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav pull-right">
                    {% if is_granted('ROLE_USER') %}
                        {{ render(controller('CMBundle:User:menu', {'path': app.request.pathInfo} )) }}
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">Logout</a>
                        </li>
                    {% else %}
                        <li class="dropdown menu-tab">
                            <a href="{{ path('fos_user_security_login') }}" class="dropdown-toggle" data-toggle="dropdown">Login</a>
                            <ul class="dropdown-menu">
                                {{ render(controller('FOSUserBundle:Security:login')) }}
                            </ul>
                        </li>
                    {% endif %}
                </ul>

            </div>
        </div>
    </nav>
{% endblock %}

{% block container %}
    <div class="row">
        {% set noColumns = noColumns|default(false) %}
        {% set inAccountPage = inAccountPage|default(false) %}
        {# LEFT COLUMN #}
        {% if not noColumns and inAccountPage %}
            <div class="col-md-3">
                {% block accountSidebar %}
                {% endblock %}
            </div>
        {% endif %}

        <div class="col-md-{% if inAccountPage %}9{% else %}8{% endif %}">
            {# FLASH #}
            {% block body %}{% endblock %}
        </div>

        {# RIGHT COLUMN #}
        {% if not noColumns and not inAccountPage %}
            <div class="sidebar col-md-4">
                <img src="{{ asset('/bundles/cm/images/layout/banner.jpg') }}" alt="Symfony!" />
                {% block sidebar %}
                {% endblock %}
            </div>
        {% endif %}

    </div> <!-- END ROW -->
{% endblock %}

{% block footer %}
    Circuito Musica &copy; 2006-{{ "now"|date("Y") }}
    <div class="pull-right">
        Contatti
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        var script  = "{{ app.request.scriptname }}";
        var culture = "{{ app.request.locale }}";
    </script>
    {% javascripts
        'js/jquery-2.0.3.min.js'
        'js/jquery-ui.min.js'
        'js/i18n/jquery-ui-i18n.min.js'
        'js/bootstrap.min.js'
        'js/jquery.hcsticky-min.js'
        'js/jquery.cycle2.min.js'
        'js/jquery.cycle2.scrollVert.min.js'
        'js/jquery.form.min.js'
        'bundles/cm/js/common.js'
        'bundles/cm/js/interface.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% if is_granted('ROLE_CLIENT') or app.request.get('_route') in ['page_biography_edit'] %}
        {% javascripts
            'lib/tinymce/tinymce.min.js'
            'lib/tinymce/jquery.tinymce.min.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script>
            /* TINY MCE */

            tinymce.baseURL = '/lib/tinymce';
            // tinymce.baseURI = 'uri/';
            // tinymce.documentBaseURL = 'lib/tinymce/';
            tinymce.suffix = '.min';
            tinymce.init({
                selector: 'textarea.tinymce',
                language: culture,
                plugins: [
                    "contextmenu paste"
                ],
                menubar: false,
                toolbar: "undo redo | bold italic",
                statusbar: false
            });
            tinymce.init({
                selector: 'textarea.tinymce-advanced',
                language: culture,
                plugins: [
                    "contextmenu paste"
                ],
                menubar: false,
            });
        </script>
    {% endif %}
    
{% endblock %}