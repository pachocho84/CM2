<div class="box box-system">
    <div class="box-heading">
        <h2>
            {{ icon('Event') }} {{ 'Next events'|trans }}
            <small><a href="{{ path('event_index') }}" class="pull-right">{{ 'Show all'|trans }}</a></small>
        </h2>
    </div>

    <div class="box-body objects">
        {% for date in dates %}
            <div class="media object">
                {% if date.event.image is not null %}{{ show_img_box(date.event.image|imagine_filter('medium'), {width: 100, height: 66, box_attributes: {class: 'pull-left'}}) }}{% endif %}
                <div class="media-body">
                    <h4>{{ date.event }}</h4>
                    <small>
                        {{ icon('Calendar') }} {{ date.start|format_date(null, null, null, constant('IntlDateFormatter::LONG')) }}
                        {{ icon('Time') }} {{ date.start|format_time(null, null, null, constant('IntlDateFormatter::SHORT')) }}<br/>
                        <span {{ tooltip(date.address) }}>{{ icon('Map') }} {{ date.location }}</span>
                    </small>
                </div>
            </div>
        {% endfor %}
    </div>
</div>