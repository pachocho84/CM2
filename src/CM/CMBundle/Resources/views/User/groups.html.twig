{% extends 'CMBundle:User:accountLayout.html.twig' %}

{% form_theme form _self %}

{% block _cm_cmbundle_groupUser_collection_groups_widget %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    <div {{ block('widget_container_attributes') }}>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th colspan="2"></th>
                    <th>{{ 'status'|trans }}</th>
                    <th></th>
                    <th>{{ 'visible on my profile'|trans }}</th>
                    <th>{{ 'hidden on my profile'|trans }}</th>
                    <th>{{ 'send me a request'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {{ block('form_rows') }}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block _cm_cmbundle_groupUser_collection_groups_entry_widget %}
    {{ form_row(form.joinArticle) }}
    {{ form_row(form.joinDisc) }}
    {{ form_row(form.joinEvent) }}
    {% if form.vars.data.group.creatorId == app.user.id or is_admin(form.vars.data.group) %}
        <tr>
            <td></td>

            <td colspan="6">
                {% if form.vars.data.group.creatorId == app.user.id %}
                    {{ 'Creator'|trans }}
                {% endif %}
                {% if form.vars.data.group.creatorId == app.user.id and is_admin(form.vars.data.group) %}
                &middot;
                {% endif %}
                {% if is_admin(form.vars.data.group) %}
                    {{ 'Admin'|trans }}
                    <a href="{{ path('group_edit', {slug: form.vars.data.group.slug})}}">{{ 'Edit group'|trans }}</a>,
                    <a href="{{ path('group_members_settings', {slug: form.vars.data.group.slug}) }}">{{ 'Manage members'|trans }}</a>,
                    <a href="{{ path('group_delete', {slug: form.vars.data.group.slug})}}">{{ 'Delete group'|trans }}</a>
                {% endif %}
            </td>
        </tr>
    {% endif %}
{% endblock %}

{% block _cm_cmbundle_groupUser_collection_groups_entry_joinArticle_widget %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <tr {{ block('widget_container_attributes') }}>
        <td rowspan="3">{{ show_img_box(form.parent.vars.data.group|default_img|imagine_filter('small'), {width: 50, box_attributes: {class: 'pull-left img-thumbnail'}}) }}</td>

        <td rowspan="3"><a href="{{ path('group_show', {slug: form.parent.vars.data.group.getSlug}) }}">{{ form.parent.vars.data.group }}</a></td>

        <td rowspan="3">{{ form.parent.vars.data.status }}</td>

        <td class="join-input">{{ label|trans({}, translation_domain) }}</td>
        {% for child in form.children %}<td>{{ form_row(child) }}</td>{% endfor %}
    </tr>
{% endblock %}

{% block _cm_cmbundle_groupUser_collection_groups_entry_joinDisc_widget %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <tr {{ block('widget_container_attributes') }}>
        <td class="join-input">{{ label|trans({}, translation_domain) }}</td>
        {% for child in form.children %}<td>{{ form_row(child) }}</td>{% endfor %}
    </tr>
{% endblock %}

{% block _cm_cmbundle_groupUser_collection_groups_entry_joinEvent_widget %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <tr {{ block('widget_container_attributes') }}>
        <td class="join-input">{{ label|trans({}, translation_domain) }}</td>
        {% for child in form.children %}<td>{{ form_row(child) }}</td>{% endfor %}
    </tr>
{% endblock %}

{% block title %}{{ 'Groups'|trans }}{% endblock %}

{% block bodyHeading %}
    <div class="row">
        <div class="col-md-8 col-lg-9">
            <h2>{{ 'Account edit'|trans }} </h2>
        </div>
        <div class="col-md-4 col-lg-3">
            <div class="heading-buttons">
                <a href="{{ path('group_new') }}" class="btn btn-default">{{ icon('Add') }} {{ 'Create a group'|trans }}</a>
                <a href="{{ path('user_show', {'slug': app.user.slug}) }}" class="btn btn-default">{{ icon('User') }} {{ 'View profile'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-heading">
            <h2>{{ icon('Group') }} <span>{{ block('title') }}</span></h2>
        </div>

        <div class="box-body">
            {{ form(form) }}
        </div>
    </div>
  
{% endblock %}