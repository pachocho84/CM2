{% extends 'CMBundle:User:accountLayout.html.twig' %}

{% block title %}{{ 'Groups'|trans }}{% endblock %}
{% block bodyHeading %}
    <div class="row">
        <div class="col-md-8 col-lg-9">
            <h2>{{ 'Account edit'|trans }} </h2>
        </div>
        <div class="col-md-4 col-lg-3">
            <div class="heading-buttons">
                <a href="{{ path('group_new') }}" class="btn btn-default">{{ icon('Add') }} {{ 'Create a group'|trans }}</a>
                <a href="{{ path('user_show', {'slug': app.user.slug}) }}" class="btn btn-default">{{ icon('User') }} {{ 'View profile'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-heading">
            <h2>{{ icon('Group') }} <span>{{ block('title') }}</span></h2>
        </div>

        <div class="box-body">
            {{ include('CMBundle:User:groupObjects.html.twig') }}
        </div>
    </div>
  
{% endblock %}