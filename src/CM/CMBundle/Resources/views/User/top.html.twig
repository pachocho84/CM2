{% if not user.coverImg or user.coverImg == '' %}
    <div class="media">
        {{ show_img_box(user.img|imagine_filter('50'), {'width': 35, 'height': 35, 'offset': user.imgOffset, 'default': 'user', 'box_attributes': {'class': 'pull-left'}})|raw }}
        <div class="media-body">
            <h2>{{ user }}</h2>
        </div>
    </div>
{% endif %}

<div class="profile-header shadow">
    {% if user.coverImg != '' %}
        <div class="cover image_box">
            {{ show_img_box(user.coverImg|imagine_filter('750'), {'width': 750, 'height': 285, 'offset': user.coverImgOffset, 'img_only': true})|raw }}
            <div class="cover-shadow"></div>
            <h2>{{ user }}</h2>
        </div>
    {% endif %}
    <nav class="navbar navbar-default" role="navigation">
        <div class="collapse navbar-collapse navbar-ex1-collapse user-menu">
            <ul class="nav navbar-nav">
                <li{% if inPage == 'profile' %} class="active"{% endif %}>
                    <a href="{{ path('user_show', {'slug': user.slug}) }}">{{ icon('User')|raw }} {{ 'Profile'|trans }}</a>
                </li>
                <li{% if inPage == 'wall' %} class="active"{% endif %}>
                    <a href="{{ path('user_wall', {'slug': user.slug}) }}">{{ icon('Wall')|raw }} {{ 'Wall'|trans }}</a>
                </li>
                <li{% if inPage == 'biography' %} class="active"{% endif %}>
                    <a href="{{ path('user_biography', {'slug': user.slug}) }}">{{ icon('Biography')|raw }} {{ 'Biography'|trans }}</a>
                </li>
                <li{% if inPage == 'event' %} class="active"{% endif %}>
                    <a href="{{ path('user_events', {'slug': user.slug}) }}">{{ icon('Event')|raw }} {{ 'Events'|trans }}</a>
                </li>
                <li{% if inPage == 'image' %} class="active"{% endif %}>
                    <a href="{{ path('user_images', {'slug': user.slug}) }}">{{ icon('Image')|raw }} {{ 'Images'|trans }}</a>
                </li>
                <li{% if inPage == 'multimedia' %} class="active"{% endif %}>
                    <a href="{{ path('user_multimedia', {'slug': user.slug}) }}">{{ icon('Multimedia')|raw }} {{ 'Multimedia'|trans }}</a>
                </li>
                <li{% if inPage == 'disc' %} class="active"{% endif %}>
                    <a href="{{ path('user_discs', {'slug': user.slug}) }}">{{ icon('Disc')|raw }} {{ 'Discs'|trans }}</a>
                </li>
            </ul>
            <ul class="nav nav navbar-nav pull-right">
                <li class="dropdown{% if inPage == 'fan' or inPage == 'relation' or inPage == 'education' %} active{% endif %}">
                    <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">{{ 'More'|trans }} <b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                        <li>
                            <a href="{{ path('fan_user', {'slug': user.slug}) }}">{{ icon('Fan')|raw }} {{ 'Fans'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('relation_user', {'slug': user.slug}) }}">{{ icon('Relation')|raw }} {{ 'Relations'|trans }}</a>
                        </li>
                        <li role="presentation" class="divider"></li>
                        <li>
                            <a href="{{ path('fan_user', {'slug': user.slug}) }}">{{ icon('Work')|raw }} {{ 'Work and education [TODO]'|trans }}</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</div>


