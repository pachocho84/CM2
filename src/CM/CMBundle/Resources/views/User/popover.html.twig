    {{ render(controller('CMBundle:Fan:button', {userId: user.id})) }}
    {{ render(controller('CMBundle:Relation:button', {user: user})) }}
    <a href="{{ path('message_new', {'userId': user.id}) }}" class="btn btn-default">{{ icon('Message') }} {{ 'Send a message'|trans }}</a>
{% endif %}