<img src='{{ user.img|imagine_filter('avatar') }}' width="50px" class="media-object" />

<h2>{{ user }}</h2>

<h3><small>{{ user.userTags|join(', ')|trim }}</small></h3>

{% if biography is not null %}{{ biography|short_text({max: 150}) }}{% endif %}

