<li class="dropdown menu-tab{% if inRequestPage %}active{% endif %}">
    
    <a href="{{ path('user_requests') }}" id="menu-requests" class="dropdown-toggle" data-toggle="dropdown">
        <img src="/images/glyphicons/bell.png" />
        <span class="countNew" id="requestsCounter">{% if newRequests > 0 %}{{ newRequests }}{% endif %}</span>
    </a>
    
    <div class="dropdown-menu pull-right">

        <div class="dropdown-menu-header">
            <h3>{{ 'Requests' | trans }}</h3>
        </div>
    
        <div class="dropdown-menu-body">
            <ul class="media-list load_more_container"></ul>
            <div class="dropdown-menu-loader"><img src="/images/loader.gif" /></div>
        </div>
    
        <div class="dropdown-menu-footer"><a href="{{ path('user_requests') }}">{{ 'View all requests' | trans }}</a></div>
    
    </div>
    
</li>

<li class="dropdown menu-tab{% if inNotificationPage %}active{% endif %}">
	
	<a href="{{ path('user_notifications') }}" id="menu-notifications" class="dropdown-toggle" data-toggle="dropdown">
		<img src="/images/glyphicons/globe.png" />
		<span class="countNew" id="notificationsCounter">{% if newNotifications > 0 %}{{ newNotifications }}{% endif %}</span>
	</a>
	
	<div class="dropdown-menu pull-right">

		<div class="dropdown-menu-header">
			<h3>{{ 'Notifications' | trans }}</h3>
		</div>

		<div class="dropdown-menu-body">
            <ul class="media-list load_more_container"></ul>
            <div class="dropdown-menu-loader"><img src="/images/loader.gif" /></div>
		</div>
	
		<div class="dropdown-menu-footer"><a href="{{ path('user_notifications') }}">{{ 'View all notifications' | trans }}</a></div>
	
	</div>
	
</li>