<li class="media comment comment_new {# <?php $comments->count() == 0 && $sf_request->getParameter('action') != 'show' and print ' hidden' ?> #}">
    {{ show_img_box(app.user.img | imagine_filter('50'), {'width': 32, 'height': 32, 'offset': app.user.imgOffset,  'link': path('user_show', {'slug': app.user.slug}), 'default': 'user', 'box_attributes': {'class': 'pull-left'}}) | raw }}
