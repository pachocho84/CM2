{% if group.coverImg is not null %}
    <div class="popover-cover">
        {{ show_img_box(group.coverImg|imagine_filter('small'), {width: 274, height: 105, offset: group.coverImgOffset}) }}
    </div>
{% else %}
    <div class="popover-cover-background"></div>
{% endif %}



<div class="popover-publisher-content">
    <div class="popover-profile">{{ show_img_box(group.img|imagine_filter('xsmall'), {width: 90, offset: group.imgOffset}) }}</div>
    
    <h2><a href="{{ path('group_show', {slug: group.slug}) }}">{{ group }}</a></h2>
    
    {% if biography is not null %}<div class="popover-publisher-biography">{{ biography|short_text({max: 150}) }}{% endif %}</div>
    
    {% if is_granted('ROLE_USER') %}
        {{ render(controller('CMBundle:Fan:button', {'userId': group.id, 'object': group|class_name})) }}
    {% endif %}
</div>