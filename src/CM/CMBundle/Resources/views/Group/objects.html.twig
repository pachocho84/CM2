{% for group in groups %}

    <div class="media">

        {% if group.images|length > 0 %}
            {{ show_img_box(group.images[0]|imagine_filter('350'), {'width': 150, 'height': 150, 'link': '', 'link_attributes': {'class': 'pull-left img-thumbnail'}})|raw }} {# TODO: add image show link #}
        {% endif %}

        <div class="media-body">
        
            <h4><a href="{{ path('group_show', {'slug': group.getSlug}) }}">{{ group }}</a></h4>

            {{ group.description }}

        </div><!-- END Media Body -->

    </div><!-- END Object -->

{% endfor %}