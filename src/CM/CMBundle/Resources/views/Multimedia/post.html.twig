{% if post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_YOUTUBE') %}
    <img width="100%" height="300px" src="http://img.youtube.com/vi/{{ post.entity.source }}/0.jpg" youtube-video-source="{{ post.entity.source }}" />
    {#<iframe width="100%" height="300px" src="//www.youtube.com/embed/{{ post.entity.source }}" frameborder="0" allowfullscreen></iframe>#}
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_VIMEO') %}
    <iframe src="//player.vimeo.com/video/{{ post.entity.source }}?color=040505" width="100%" height="300px" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_SOUNDCLOUD') %}
    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ post.entity.source }}&amp;color=000000&amp;auto_play=false&amp;show_artwork=true"></iframe>
{% endif %}