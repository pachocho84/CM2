{% if post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_YOUTUBE') %}
    <img width="100%" height="300px" src="http://img.youtube.com/vi/{{ multimedia.link }}/0.jpg" youtube-video-link="{{ multimedia.link }}" />
    {#<iframe width="100%" height="300px" src="//www.youtube.com/embed/{{ post.entity.link }}" frameborder="0" allowfullscreen></iframe>#}
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_VIMEO') %}
    <iframe src="//player.vimeo.com/video/{{ post.entity.link }}?color=040505" width="100%" height="300px" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_SOUNDCLOUD') %}
    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ post.entity.link }}&amp;color=000000&amp;auto_play=false&amp;show_artwork=true"></iframe>
{% endif %}