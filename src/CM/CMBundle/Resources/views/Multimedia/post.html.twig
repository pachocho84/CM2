{% if post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_YOUTUBE') %}
    <img width="100%" src="http://img.youtube.com/vi/{{ post.entity.link }}/0.jpg" youtube-video-link="{{ post.entity.link }}" />
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_VIMEO') %}
    <iframe src="//player.vimeo.com/video/{{ post.entity.link }}?color=040505" width="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_SOUNDCLOUD') %}
    <iframe width="100%" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ post.entity.link }}&amp;color=000000&amp;auto_play=false&amp;show_artwork=true"></iframe>
{% endif %}