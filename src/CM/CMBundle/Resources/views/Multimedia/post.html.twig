{% if post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_YOUTUBE') %}
    <div class="video-container">
        <div class="video-title-container">
            <div class="video-title-shadow"></div>
            <h3 class="video-title"><a href="http://www.youtube.com/watch?v={{ post.entity.source }}" target="_blank">{{ post.entity }}</a></h3>
        </div>
        <img width="100%" src="http://img.youtube.com/vi/{{ post.entity.source }}/0.jpg" youtube-video-source="{{ post.entity.source }}" />
    </div>
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_VIMEO') %}
    <iframe src="//player.vimeo.com/video/{{ post.entity.source }}?color=040505" width="100%" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
{% elseif post.entity.type == constant('CM\\CMBundle\\Entity\\Multimedia::TYPE_SOUNDCLOUD') %}
    <iframe width="100%" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ post.entity.source }}&amp;color=000000&amp;auto_play=false&amp;show_artwork=true"></iframe>
{% endif %}