{% if is_granted('ROLE_USER') and group.post.creatorId != app.user.id %}

    {% if request is not null and request.group.groupUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\GroupUser::STATUS_PENDING') %}
        
        <div class="btn-group btn-group-sm ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{ show_icon('Crown')|raw }} {{ 'You have been added as member'|trans }} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_update', {'choice': 'accept', 'id' : request.id}) }}" class="ajax-link">{{ show_icon('Ok')|raw }} {{ 'Accept'|trans }}</a></li>
                <li><a href="{{ path('request_update', {'choice': 'refuse', 'id' : request.id}) }}" class="ajax-link">{{ show_icon('Crown')|raw }} {{ 'Refuse'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request is not null and request.group.groupUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\GroupUser::STATUS_ACTIVE') %}

        <div class="btn-group btn-group-sm ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{ show_icon('Crown')|raw }} {{ 'You are a member'|trans }} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_delete', {'id': request.id}) }}" class="ajax-link">{{ 'Cancel participation'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request is not null and request.group.groupUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\GroupUser::STATUS_REQUESTED') %}

        <div class="btn-group btn-group-sm ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{ show_icon('Crown')|raw }} {{ 'Request sent'|trans }} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_delete', {'id': request.id}) }}" class="ajax-link">{{ 'Cancel request'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request is not null and request.group.groupUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\GroupUser::STATUS_REFUSED_ADMIN') %}
        
        <span class="btn btn-default disabled">{{ show_icon('Crown')|raw }} {{ 'Your request has been refused'|trans }}</span>

    {% elseif request is not null and request.group.groupUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\GroupUser::STATUS_REFUSED_GROUP_USER') %}
        
        <span class="btn btn-default disabled">{{ show_icon('Crown')|raw }} {{ 'You refused the join request'|trans }}</span>
        
    {% else %}
        
        <div class="btn-group btn-group-sm">
            <a href="{{ path('request_add', {'object': group|class_name, 'objectId': group.id, 'userId': app.user.id}) }}" class="btn btn-default ajax-link ajax-link-target" data-loading-text="{{ 'Loading'|trans }}" data-toggle="tooltip" data-container="body" title="{{ 'Send a request to join'|trans }}" data-placement="top">{{ show_icon('Crown')|raw }} {{ 'Request join'|trans }}</a>
        </div>
        
    {% endif %}
{% endif %}

