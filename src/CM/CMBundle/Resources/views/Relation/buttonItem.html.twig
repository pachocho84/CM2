{% if btn %}
    <button type="button" class="btn btn-{{ btnColour }} dropdown-toggle relation-button" data-toggle="dropdown"><span {{ tooltip(tooltipArray, {placement: 'top'}) }}>{{ icon('Relation') }} {{ reqText|trans }}</span></button>
{% else %}
    <a class="text-{{ btnColour }} dropdown-toggle relation-button" data-toggle="dropdown" href="#" title="{{ reqText|trans }}"><span {{ tooltip(tooltipArray, {placement: 'top'}) }}>{{ icon('Relation') }}</span></a>
{% endif %}