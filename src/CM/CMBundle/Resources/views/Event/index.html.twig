	<div class="row">
		<div class="col-lg-5">
			<h2>{{ block('title') }}</h2>
		</div>
		{{ include('CMBundle:Event:menu.html.twig') }}
	</div>
	
	
	
	<div class='box'>
		{{ include('CMBundle:Event:objects.html.twig', { 'events': events, 'category': category } ) }}
	</div>
	
{% endblock %}