{% extends 'CMBundle::layout.html.twig' %}

{% block title %}{{ "Events"|trans }}{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-lg-5">
			<h2>{{ block('title') }}</h2>
		</div>
{# 		<?php include_partial('menu', array('categories' => $categories)) ?> #}
	</div>
	
	
	
	<div class='box'>
		{% for key, event in events %}
		
			{% if key == 0 or event.eventDates[0].start | date('Y/m/d') != events[key-1].eventDates[0].start | date('Y/m/d') %}
				</ul>
				<div class="box-top">
					<h2>{{ event.eventDates[0].start | format_date(null, null, null, constant('IntlDateFormatter::LONG')) }}</h2>
				</div>
				<ul class="media-list objects">
			{% endif %}
			
			<li class="object">
				<div class="media">
					
					{% if event.getImages | length > 0 %}
						<a href="{{ path('event_show', {'id': event.id, 'slug': event.getSlug}) }}" class="pull-left thumbnail">
							<img src='{{- uploaded_images_full_dir -}}/{{- event.getImages[0].img }}' width=200 />
						</a>
					{% endif %}
{# 						<?php show_img_box($post->getImages()->getFirst(), array('width' => 200, 'height' => 140, 'link' => $post->getRawValue()->getEntity()->getLinkShow(), 'link_attributes' => array('class' => 'pull-left thumbnail'))) ?>	 #}
				
					<div class="media-body">
						
						<h4><a href="{{ path('event_show', {'id': event.id, 'slug': event.getSlug}) }}">{{ event.getTitle }}</a></h4>
									
						<p class="text-muted">
							<i class="glyphicon glyphicon-time"></i> {{ event.eventDates[0].start | format_time(null, null, null, constant('IntlDateFormatter::SHORT')) }} &middot; 
							<i class="glyphicon glyphicon-map-marker"></i> {{ event.eventDates[0].location }} <small>({{ event.eventDates[0].address }})</small>
						</p>
				
						<p>{{ event.getExtract }}</p>
{# 							<?php echo $post->getRawValue()->getEntity()->getShortText() ?> #}
						
						
{# 							<?php include_partial('utility/bottom', array('post' => $post)) ?> #}
				
					</div><!-- END Media Body -->
				
				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
{% endblock %}