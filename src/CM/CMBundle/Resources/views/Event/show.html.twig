{% extends 'CMBundle::layout.html.twig' %}

{% block body %}
    <article class="blog">
      <header>
        <h2>{{ event.id }} {{ event.getTitle }}</h2>
        <h3>{{ event.getSubtitle }}</h3>
      </header>
      <div>
          <p>{{ event.getExtract }}</p>
          <ul>
              {% for date in event.eventDates %}
                  <li>{{ date.start | date }}</li>
              {% endfor %}
          </ul>
      </div>
     <div>
          {% for image in event.getImages %}
              <img src='{{- uploaded_images_full_dir -}}/{{- image.img }}' width=200 />
          {% endfor %}
      </div>
    </article>
    <div>
        {{ form(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/cm/js/uploadCollection.js') }}"></script>
{% endblock %}