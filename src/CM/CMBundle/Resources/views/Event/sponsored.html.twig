{% if sponsoredEvents is not null %}
    <div class="box">
        
        <div class="box-heading">
            <h2>{{ icon('Sponsored') }} {{ 'Sponsored Events'|trans }}</h2>
        </div>
        
        <div class="box-body objects events-sponsored">
            <div class="row">
                {% for event in sponsoredEvents %}
                    
                    <div class="col-sm-4">
                        
                        {{ show_img_box(event.image|default_img|imagine_filter('medium'), {ratio: 1.6, offset: event.imgOffset}) }}
                        
                        <h3><a href="{{ path('event_show', { id: event.id, slug: event.getSlug }) }}" title="{{ event }}">{{ event }}</a></h3>
                                      
                        <div class="events-sponsored-dates cycle-slideshow" data-cycle-slides="> div" data-cycle-fx="scrollVert">
                            {% for date in event.eventDates %}                                                
                                <div>
                                    <div class="event-date-month">{{ date.start|format_date('MMM') }}</div>
                                    <div class="event-date-month">{{ date.start|format_date('d') }}</div>
                                    <p class="text-muted"><small>{{ date.location }}</small></p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}    
            </div>
        </div>
    </div>
{% endif %}