{% if sponsoredEvents is not null %}
    <div class="box">
        
        <div class="box-heading">
            <h2>{{ icon('Sponsored') }} {{ 'Sponsored Events'|trans }}</h2>
        </div>
        
        <div class="box-body objects events-sponsored">
            <div class="row">
                {% for event in sponsoredEvents %}
                    
                    <div class="col-sm-4">
                        
                        {{ show_img_box(event.image|default_img|imagine_filter('medium'), {ratio: 1.6, offset: event.imgOffset}) }}

                        <div class="media">
                            
                            <div class="pull-left">                                         
                                <div class="events-sponsored-dates cycle-slideshow" data-cycle-slides="> div" data-cycle-fx="scrollVert">
                                    {% for date in event.eventDates %}                                                
                                        <div>
                                            <h3>{{ date.start|format_date('MMM') }}</h3>
                                            <h2>{{ date.start|format_date('d') }}</h2>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            
                            <div class="media-body">
                                <h4><a href="{{ path('event_show', { id: event.id, slug: event.getSlug }) }}" title="{{ event }}">{{ event[:33] ~ '...' }}</a></h4>

                                <div class="events-sponsored-locations cycle-slideshow" data-cycle-slides="> p" data-cycle-fx="scrollVert">
                                    {% for date in event.eventDates %}    
                                        <p class="text-muted"><small>{{ date.location }}</small></p>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}    
            </div>
        </div>
    </div>
{% endif %}