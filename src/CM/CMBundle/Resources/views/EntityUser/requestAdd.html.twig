{% if is_granted('ROLE_USER') and entity.post.creatorId != app.user.id %}

    {% if request is null or (request is not null and request.entity.entityUsers[app.user.id] is not defined) %}
        
        <div class="btn-group">
            <a href="{{ path('request_add', {'object': entity|class_name , 'objectId': entity.id, 'userId': app.user.id}) }}" class="btn btn-default ajax-link ajax-link-target" data-loading-text="{{ 'Loading'|trans }}" data-toggle="tooltip" data-container="body" title="{{ 'Send a request to join and to show this element on your profile'|trans }}" data-placement="top">{{ icon('Crown') }}</a>
        </div>

    {% elseif request.entity.entityUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\EntityUser::STATUS_PENDING') %}
        
        <div class="btn-group ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <div data-toggle="tooltip" data-container="body" title="{{ 'You have been added as protagonsit'|trans }}">{{ icon('Crown') }}</div>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_update', {'choice': 'accept', 'id': request.id}) }}" class="ajax-link">{{ icon('Ok') }} {{ 'Accept'|trans }}</a></li>
                <li><a href="{{ path('request_update', {'choice': 'refuse', 'id': request.id}) }}" class="ajax-link">{{ icon('Remove') }} {{ 'Refuse'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request.entity.entityUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\EntityUser::STATUS_ACTIVE') %}

        <div class="btn-group ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <div data-toggle="tooltip" data-container="body" title="{{ 'You are a protagonist'|trans }}">{{ icon('Crown') }}</div>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_delete', {'id': request.id}) }}" class="ajax-link">{{ 'Cancel participation'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request.entity.entityUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\EntityUser::STATUS_REQUESTED') %}

        <div class="btn-group ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <div data-toggle="tooltip" data-container="body" title="{{ 'Request sent'|trans }}">{{ icon('Crown') }}</div>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_delete', {'id': request.id}) }}" class="ajax-link">{{ 'Cancel request'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request.entity.entityUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\EntityUser::STATUS_REFUSED_ADMIN') %}
        
        <span class="btn btn-default disabled" title="{{ 'Your request has been refused'|trans }}">{{ icon('Crown') }}</span>

    {% elseif request.entity.entityUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\EntityUser::STATUS_REFUSED_ENTITY_USER') %}
        
        <span class="btn btn-default disabled" title="{{ 'You refused the protagonist request'|trans }}">{{ icon('Crown') }}</span>
        
    {% endif %}
{% endif %}