{% if sponsoredArticles is not null %}
    <div class="box">
        
        <div class="box-heading">
            <h2>{{ icon('Sponsored') }} {{ 'Sponsored Articles'|trans }}</h2>
        </div>
        
        <div class="box-body objects articles-sponsored">
            <div class="row">
                {% for article in sponsoredArticles %}
                    
                    <div class="col-sm-4">
                        
                        {{ show_img_box(article.image|default_img|imagine_filter('medium'), {ratio: 1.6, offset: article.imgOffset}) }}
                        
                        <h3><a href="{{ path('article_show', { id: article.id, slug: article.getSlug }) }}" title="{{ article }}">{{ article }}</a></h3>
                        
                    </div>
                {% endfor %}    
            </div>
        </div>
    </div>
{% endif %}