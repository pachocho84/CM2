<div class="articles-row clearfix">
    {% for article in articles %}
        
        <div class="article">
            {{ article.id }}  
            {% if article.getImages|length > 0 %}
                <a href="{{ path('article_show', { 'id': article.id, 'slug': article.getSlug }) }}" class="pull-left img-thumbnail article-cover">
                    <img src='{{ asset(uploaded_images_full_dir ~ '/' ~ article.images[0].img) }}' width="200px" />
                </a>
            {% endif %}
            <h4><a href="{{ path('article_show', { 'id': article.id, 'slug': article.getSlug }) }}">{{ article.getTitle }}</a></h4>
        </div>

        {{ entity_short_text(article) }}
        
    {% endfor %}
</div>

{% if articles.paginationData.current < articles.paginationData.last %}
    <div class="well well-small load_more">
        <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({ 'page': articles.getPaginationData.next })) }}">{{ 'Load more' | trans }}</a>
    </div>
{% endif %}