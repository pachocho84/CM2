{% if fans|length > 0 %}
    <div class="box clearfix">
        <div class="box-heading">
            <h2>
                {{ icon('Fan') }} <span>{{ 'Fans'|trans }}</span>
                <small><a href="{{ path('fan_user', {'slug': user.slug}) }}" class="pull-right">{{ 'Show all'|trans }}</a></small>
            </h2>
        </div>

        <div class="objects box-body fans">
            {% for i in 0..(fans|length - 1) if i < 7 or i < fans|length - (fans|length % 7) %}
                {% set fan = fans[i] %}
                <a href="{{ path('user_show', {'slug': fan.slug}) }}" class="fan-user">
                    {{ show_img_box(fan.img|imagine_filter('small'), {'width': 50, 'height': 50, 'offset': fan.imgOffset, 'default': 'user'}) }}
                </a>
            {% endfor %}
        </div>
        
    </div>
{% endif %}