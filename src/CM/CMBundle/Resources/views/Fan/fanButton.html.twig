{% if userId != app.user.id %}
    {% if not imFan %}
        {% if class is not defined %}{% set class = ' ajax-link ajax-link-target' %}{% endif %}
        <a href="{{ path('fan_become', {'fanId': userId, 'object': 'User', 'class': 'btn fan-become'~class}) }}">{% if fanBecomeText is defined %}{{ fanBecomeText }}{% else %}<i class="glyphicon glyphicon-flag"></i> {{ 'Become fan'|trans }}{% endif %}</a>
    {% else %}
        {% if class is not defined %}{% set class = ' ajax-link' %}{% endif %}
        <div class="btn-group ajax-link-target">
          <button class="btn dropdown-toggle<?php isset($class) and print ' '.$class ?>" data-toggle="dropdown">
                <i class="glyphicon glyphicon-flag"></i> {{ 'You are fan'|trans }} <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="{{ path('fan_unbecome', {'fanId': userId, 'object': 'User', 'class': 'fan-become'~class}) }}"><i class="glyphicon glyphicon-flag"></i> {{ 'Unbecome fan'|trans }}</a></li>
          </ul>
        </div>
    {% endif %}
{% endif %}

