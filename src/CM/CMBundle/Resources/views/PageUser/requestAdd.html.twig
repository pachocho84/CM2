{% if is_granted('ROLE_USER') and page.post.creatorId != app.user.id %}

    {% if request is not null and request.page.pageUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\PageUser::STATUS_PENDING') %}
        
        <div class="btn-page btn-page-sm ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{ icon('Crown')|raw }} {{ 'You have been added as member'|trans }} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_update', {'choice': 'accept', 'id' : request.id}) }}" class="ajax-link">{{ icon('Ok')|raw }} {{ 'Accept'|trans }}</a></li>
                <li><a href="{{ path('request_update', {'choice': 'refuse', 'id' : request.id}) }}" class="ajax-link">{{ icon('Remove')|raw }} {{ 'Refuse'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request is not null and request.page.pageUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\PageUser::STATUS_ACTIVE') %}

        <div class="btn-page btn-page-sm ajax-link-target">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{ icon('Crown')|raw }} {{ 'You are a member'|trans }} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="{{ path('request_delete', {'id': request.id}) }}" class="ajax-link">{{ 'Cancel participation'|trans }}</a></li>
            </ul>
        </div>

    {% elseif request is not null and request.page.pageUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\PageUser::STATUS_REFUSED_ADMIN') %}
        
        <span class="btn btn-default disabled">{{ icon('Crown')|raw }} {{ 'Your request has been refused'|trans }}</span>

    {% elseif request is not null and request.page.pageUsers[app.user.id].status == constant('CM\\CMBundle\\Entity\\PageUser::STATUS_REFUSED_GROUP_USER') %}
        
        <span class="btn btn-default disabled">{{ icon('Crown')|raw }} {{ 'You refused the join request'|trans }}</span>
        
    {% endif %}
{% endif %}

