<div class="row disc-detail-container hidden">
    <div class="col-lg-12">
        <div class="disc-detail">
            <div class="row-fluid object">
                    

                <div class="col-lg-4 disc-content">
                    {% if disc.getImages|length > 0 %}
                        <img src='{{ disc.image|default_img|imagine_filter('medium') }}' width="200px" />
                    {% endif %}
                </div>



                <div class="col-lg-8 disc-likeComment">
                    <h3>{{ disc }}</h3>
        
                    {#<p class="text-muted"><?php echo __('Published on') ?> <?php echo format_date($post->getCreatedAt(), 'D') ?> <?php echo __('by') ?> <?php echo link_to($post->getPublisher(), $post->getRawValue()->getPublisher()->getLinkShow()) ?>, <?php echo __('with') ?> <?php include_component('protagonist', 'protagonists', array('post' => $post)) ?></p>#}

                    <dl class="dl-horizontal">
                        {% if disc.label is not null %}<dt>Label</dt><dd>{{ disc.label }}</dd>{% endif %}
                        {% if disc.year is not null %}<dt>Year</dt><dd>{{ disc.year|date('Y') }}</dd>{% endif %}
                    </dl>
    
                    {{ disc|short_text }}
                </div>

                <div class="disc-likeComment clearfix">
        
                    {#<div class="clearfix">
                        <div class="btn-toolbar pull-right">
                            <?php echo link_to(__('Vai al disco'), $post->getRawValue()->getEntity()->getLinkShow(), array('class' => 'btn')) ?>
                            <?php include_partial('protagonist/requestButton', array('object' => $post)) ?>
                            <?php if ($sf_user->canManage($post)): ?>
                                <div class="btn-group">
                                    <?php include_partial('editMenu', array('post' => $post)) ?>
                                </div>
                            <?php endif ?>
                        </div>
                    </div>#}
        
                    {{ include('CMBundle::social.html.twig', {'post': disc.post}) }}
                </div>

            </div>
        </div>
    </div>
</div>