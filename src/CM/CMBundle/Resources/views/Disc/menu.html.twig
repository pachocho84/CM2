<div class="col-lg-7 text-right">
    <div class="btn-group btn-group-sm">
        <a href="{{ path('disc_index') }}" class="{{ app.request.attributes.get('_route') == 'disc_index' ? 'btn btn-default active' : 'btn btn-default'}}"><i class="glyphicon glyphicon-list"></i> {{ 'List'|trans }}</a>
        <div class="btn-group btn-group-sm">
            <a href="{{ path('event_index') }}" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-tag"></i> {{ 'Categories'|trans }} <b class="caret"></b></a>
            <ul class="dropdown-menu pull-right text-left" role="menu" aria-labelledby="dropdownMenu">
                <li><a href="{{ path('event_index') }}">{{ 'Discs'|trans }}</a></li>
                <li class="divider"></li>
                {% for category in categories %}
                    <li><a href="{{ path('disc_category', { 'categorySlug': category.getSlug }) }}">{{ category.getPlural|capitalize }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <a href="{{ path('disc_new') }}" class="{{ app.request.attributes.get('_route') == 'disc_new' ? 'btn btn-default active' : 'btn btn-default'}}"><i class="glyphicon glyphicon-plus"></i> {{ 'Create' | trans }}</a>
    </div>
</div>