{% if sponsoredDiscs is not null %}
    <div class="box">
        
        <div class="box-heading">
            <h2>{{ icon('Sponsored') }} {{ 'Sponsored Discs'|trans }}</h2>
        </div>
        
        <div class="box-body objects discs-sponsored">
            <div class="row">
                {% for disc in sponsoredDiscs %}
                    
                    <div class="col-sm-4">
                        
                        {{ show_img_box(disc.image|default_img|imagine_filter('medium'), {ratio: 1.6, offset: disc.imgOffset}) }}
                        
                        <h3><a href="{{ path('disc_show', { id: disc.id, slug: disc.getSlug }) }}" title="{{ disc }}">{{ disc }}</a></h3>
                    </div>
                {% endfor %}    
            </div>
        </div>
    </div>
{% endif %}