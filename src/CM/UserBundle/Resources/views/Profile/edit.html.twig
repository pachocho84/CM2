{% extends "CMBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@CMBundle/Resources/public/css/typeahead.js-bootstrap.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}
    
    <div class="row">
    
        <div class="col-md-4">
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#"><span class="glyphicons cogwheels"></span> {{ 'Basic information' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"></span> <span class="glyphicons camera"></span> {{ 'Profile & Cover pictures' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"><span class="glyphicon glyphicon-book"></span> {{ 'Biography' | trans }}</a></li>
                <li><a href="{{ path('user_tags_edit') }}"><span class="glyphicon glyphicon-tags"></span> {{ 'Tags' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"><span class="glyphicons group"></span> {{ 'Groups' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"><span class="glyphicons bank"></span> {{ 'Pages' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"><span class="glyphicons book_open"></span> {{ 'Pages' | trans }}</a></li>
                <li><a href="{{ path('user_image_edit') }}"><span class="glyphicons more_items"></span> {{ 'Pages' | trans }}</a></li>
                <li><a href="{{ path('user_tags_edit') }}"><span class="glyphicons git_branch"></span> {{ 'Relations' | trans }}</a></li>
            </ul>
        </div>
        
        <div class="col-md-8">
        
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div>
                    <input type="submit" value="{{ 'Save' | trans }}" />
                </div>
            {{ form_end(form) }}
            
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script type="text/javascript">
            var typeaheadHintRoute = "{{ path('user_typeahead_hint') }}";
        </script>
        {% javascripts
            '@CMBundle/Resources/public/js/hogan-2.0.0.min.js'
            '@CMBundle/Resources/public/js/uploadCollection.js'
            '@CMBundle/Resources/public/js/form.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}