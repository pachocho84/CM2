{% extends "CMBundle:User:accountLayout.html.twig" %}

{% block section %}{{ 'Basic informations'|trans }}{% endblock %}

{% block main %}
    <div class="box">
        <div class="box-heading">
            <h2>{{ icon('Options') }} {{ block('section') }}</h2>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>

                {{ form_widget(form) }}
                
                <div class="text-right">
                    <a href="{{ path(app.request.attributes.get('_route')) }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
                    <button type="submit" name="commit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}