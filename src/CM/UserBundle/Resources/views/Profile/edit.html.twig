{% extends "CMBundle:User:accountLayout.html.twig" %}
{% set inProfilePage = true %}

{% block title %}{{ 'Basic informations'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@CMBundle/Resources/public/css/typeahead.js-bootstrap.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-top">
            <div class="row">
                <div class="col-lg-5">
                    <h2>{{ icon('Options') }} <span>{{ block('title') }}</h2>
                </div>
                <div class="col-lg-7 text-right">
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path('user_show', {'slug': app.user.slug}) }}" class="btn btn-default">{{ icon('User') }} {{ 'View profile'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="objects">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script type="text/javascript">
            var typeaheadHintRoute = "{{ path('user_typeahead_hint') }}";
        </script>
        {% javascripts
            '@CMBundle/Resources/public/js/hogan-2.0.0.min.js'
            '@CMBundle/Resources/public/js/typeahead.min.js'
            '@CMBundle/Resources/public/js/uploadCollection.js'
            '@CMBundle/Resources/public/js/form.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}