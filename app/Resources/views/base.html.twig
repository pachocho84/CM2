<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />            
        <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
        <title>{% block title %}{% endblock %}</title>

        <script>
            // Object.defineProperty(console, '_commandLineAPI', { get : function() { throw 'We disabled it, Chrome user!' } });

            var documentURL = document.URL;
            window.onpopstate = function() {
                if (typeof history.state === 'string' && documentURL.indexOf(history.state) != documentURL.length - history.state.length) {
                    window.location.reload(true);
                }
            };
        </script>

        {% block stylesheets %}{% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{% block icon %}{% endblock %}" />
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    
    <body>
        <div id="body">
            <div id="header">
                {% block header %}{% endblock %}
            </div>

            <div id="menu-container">
                {% block menu %}{% endblock %}
            </div>
          
            <div class="container">
                {% block container %}{% endblock %}
            </div> 

            <div class="container"> 
                <div id="footer">
                    {% block footer %}{% endblock %}
                </div>
            </div>

            {% block javascripts %}{% endblock %}

            <div id="blueimp-gallery" class="blueimp-gallery">
                <div class="slides"></div>
                <div class="info">
                    <span class="title"></span>
                    <a class="prev">‹</a>
                    <a class="next">›</a>
                    <span class="sequence"></span>
                </div>
                <div class="sidebar"></div>
                
                <a class="close">×</a>
                <!-- <ol class="indicator"></ol> -->
            </div>
        </div>
    </body>
</html>
